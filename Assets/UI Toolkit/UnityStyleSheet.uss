/*-------------------------------Shared component styling ---------------------------------------*/

/* Button styling (common for both screens) */
.menu-button {
    width: 525px;
    height: 80px;
    background-color: #333333;
    border-radius: 12px;
    justify-content: center;
    align-items: center;
    margin-bottom: 20px;
    transition-duration: 0.3s;
    transition-property: background-color, scale;
}

.menu-button:hover {
    background-color: #555555;
    scale: 1.05;
}

.menu-button:active {
    background-color: #777777;
    scale: 0.95;
}

/* Button text styling */
.menu-button .button-text {
    font-size: 48px;
    color: #ffffff;
    unity-text-align: center;
}

